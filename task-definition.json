{
  "family": "story-iv-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["EC2"],
  "executionRoleArn": "PLACEHOLDER_EXECUTION_ROLE_ARN",
  "taskRoleArn": "PLACEHOLDER_TASK_ROLE_ARN",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "containerDefinitions": [
    {
      "name": "story-iv-container",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/story-iv:latest",
      "portMappings": [
        {
          "containerPort": "PLACEHOLDER_APP_PORT",
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "QUEUE_URL",
          "value": "PLACEHOLDER_QUEUE_URL"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "MODEL_DIR",
          "value": "/opt/models/wan2.2-ti2v-5b"
        },
        {
          "name": "DYNAMODB_TABLE",
          "value": "PLACEHOLDER_DYNAMODB_TABLE"
        }
      ],
      "resourceRequirements": [
        {
          "type": "GPU",
          "value": "1"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/story-iv",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:PLACEHOLDER_APP_PORT/healthz || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "essential": true
    }
  ],
  "tags": [
    {
      "key": "Name",
      "value": "story-iv-task-definition"
    },
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Purpose",
      "value": "Video Generation Application Task Definition"
    }
  ]
}
